                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/Button_Radio2h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2시간" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/Button_RadioNight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="야간" />

            </com.beardedhen.androidbootstrap.BootstrapButtonGroup>

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:id="@+id/BootstrapLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:bootstrapBrand="info"
                app:bootstrapHeading="h6"
                app:bootstrapText="{fa_circle_o} 작업금액"
                app:layout_constraintStart_toStartOf="@+id/ButtonGroup_JobTimeBottom"
                app:layout_constraintTop_toBottomOf="@+id/ButtonGroup_JobTimeBottom" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/EditWorkPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
