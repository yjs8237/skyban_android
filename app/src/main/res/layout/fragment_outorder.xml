                app:bootstrapSize="md"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BootstrapLabel" />

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/EditWorkPay">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/Button_WorkPay1"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+1만원"
                    app:bootstrapBrand="primary"
                    app:bootstrapSize="md"
                    app:buttonMode="regular"
                    app:roundedCorners="false" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/Button_WorkPay5"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+5만원"
                    app:bootstrapBrand="primary"
                    app:bootstrapSize="md"
                    app:buttonMode="regular"
                    app:roundedCorners="false" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/Button_WorkPay10"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+10만원"
                    app:bootstrapBrand="primary"
                    app:bootstrapSize="md"
                    app:buttonMode="regular"
                    app:roundedCorners="false" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/Button_WorkPayDelete"
                    android:layout_margin="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="삭제"
                    app:bootstrapBrand="primary"
                    app:bootstrapSize="md"
                    app:buttonMode="regular"
                    app:roundedCorners="false" />

            </LinearLayout>

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:id="@+id/bootstrapLabel4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:bootstrapBrand="info"
                app:bootstrapHeading="h6"
                app:bootstrapText="{fa_circle_o} 추가요금"
                app:layout_constraintStart_toStartOf="@+id/EditWorkPay"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

            <com.beardedhen.androidbootstrap.BootstrapButtonGroup
                android:id="@+id/ButtonGroup_Charge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                app:bootstrapBrand="primary"
                app:bootstrapSize="md"
                app:buttonMode="radio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/bootstrapLabel4"
                app:layout_constraintTop_toBottomOf="@+id/bootstrapLabel4"
                app:roundedCorners="true"
                app:showOutline="true">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/Button_RadioNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="없음"
                    app:checked="true" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/Button_Radio5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="5만원" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/Button_Radio10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10만원" />

            </com.beardedhen.androidbootstrap.BootstrapButtonGroup>

            <com.beardedhen.androidbootstrap.BootstrapLabel
                android:id="@+id/bootstrapLabel5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:bootstrapBrand="info"
                app:bootstrapHeading="h6"
                app:bootstrapText="{fa_circle_o} 작업장소"
                app:layout_constraintStart_toStartOf="@+id/ButtonGroup_Charge"
                app:layout_constraintTop_toBottomOf="@+id/ButtonGroup_Charge" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/EditText_Addr"
