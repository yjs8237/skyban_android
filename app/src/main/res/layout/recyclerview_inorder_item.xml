<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="4dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@color/sky"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Orderseq"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="한글"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewCommission_yn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="한글"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_margin="2dp"
                android:text="한글"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_margin="2dp"
                android:text="한글"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView_work_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_margin="2dp"
                android:text="한글"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textViewWorkProc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_margin="2dp"
                android:text="한글"
                android:textColor="@color/white"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_right"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_car_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView_work_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_margin="2dp"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView_work_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_margin="2dp"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView_work_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_margin="2dp"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView_work_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_margin="2dp"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView_pay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_margin="2dp"
                android:textSize="@dimen/list_item_size"
                android:textStyle="bold"/>
        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>